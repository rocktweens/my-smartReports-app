{
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "target": "ES2019",
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true//,
    //"types": ["@strapi/types"]
    //"declaration": true,
    //"declarationDir": "dist"
  },
  "include": [
    // Include root files
    "./",
    // Include all ts files
    "./**/*.ts",
    "./**/*.d.ts",
    // Include all js files
    "./**/*.js",
    // Force the JSON files in the src folder to be included
    "src/**/*.json" //,
    //"strapi-server.ts",
    //"strapi-admin.ts",
    //"src/plugins/*.*"
    //"src"
  ],

  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",

    // Do not include admin files in the server compilation
    //"src/admin/",
    // Do not include test files
    "**/*.test.*"
    // Do not include plugins in the server compilation
    //"src/plugins/**"
  ]
}
